@page
@model Pgrsms.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log into account";
}
<div class="auth-card animate-in">
    <div class="accent-badge">Welcome back</div>
    <h2 class="auth-title">Log into account</h2>
    <p class="auth-sub">Let’s continue learning — we kept it all tidy for you.</p>

    <form id="loginForm" method="post" asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery="false" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label class="label">Email</label>
            <input asp-for="Input.Email" class="form-control input-lg" placeholder="name@email.com" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label class="label">Password</label>
            <input asp-for="Input.Password" class="form-control input-lg" placeholder="••••••••" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
            </div>
            <a asp-page="./ForgotPassword" class="small link-muted">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-primary btn-wide lift">Log in</button>

        <div class="divider"><span>or</span></div>

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-outline-secondary lift">Continue with Apple</button>
            <button type="button" class="btn btn-outline-secondary lift">Continue with Facebook</button>
            <button type="button" class="btn btn-outline-secondary lift">Continue with Google</button>
        </div>

        <p class="terms">By using Classroom, you agree to the Terms and Privacy Policy.</p>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
