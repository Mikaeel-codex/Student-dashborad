@page
@model Pgrsms.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="auth-card">
    <h2 class="auth-title">Reset password</h2>
    <p class="auth-sub">We will email you a link to reset your password.</p>

    <form method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label class="label">Email</label>
            <input asp-for="Input.Email" class="form-control input-lg" placeholder="example@example" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-wide">Send</button>
        <p class="terms">By using Classroom, you agree to the Terms and Privacy Policy.</p>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
