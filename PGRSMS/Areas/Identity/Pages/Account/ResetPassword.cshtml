@page
@model Pgrsms.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Set new password";
}
<div class="auth-card">
    <h2 class="auth-title">Create your password</h2>

    <form method="post" novalidate>
        <input type="hidden" asp-for="Input.Code" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label class="label">Email</label>
            <input asp-for="Input.Email" class="form-control input-lg" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label class="label">Password</label>
            <input asp-for="Input.Password" class="form-control input-lg" placeholder="Enter password" />
            <div class="hint mt-1">8 characters minimum · a number · a symbol</div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="label">Confirm password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control input-lg" placeholder="Repeat password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-wide">Continue</button>
        <p class="terms">By using Classroom, you agree to the Terms and Privacy Policy.</p>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
