@page
@model Pgrsms.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset email sent";
}
<div class="auth-card">
    <h2 class="auth-title">We’ve sent an email</h2>
    <p class="auth-sub">
        @if (!string.IsNullOrEmpty(Model.DevResetLink))
        {
            <text>Use the link below to reset your password in development:</text>
        }
        else
        {
            <text>If an account exists, you’ll receive a reset email shortly.</text>
        }
    </p>

    @if (!string.IsNullOrEmpty(Model.DevResetLink))
    {
        <div class="alert alert-info">
            <a href="@Model.DevResetLink">@Model.DevResetLink</a>
        </div>
    }

    <a asp-page="./Login" class="btn btn-outline-secondary btn-wide mt-2">Back to login</a>
    <p class="terms">By using Classroom, you agree to the Terms and Privacy Policy.</p>
</div>
