@page
@model Pgrsms.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create new account";
}
<div class="auth-card animate-in">
    <div class="accent-badge">Get started</div>
    <h2 class="auth-title">Create new account</h2>
    <p class="auth-sub">Join thousands of learners and track your progress with ease.</p>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-antiforgery="false" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label class="label">Email</label>
            <input asp-for="Input.Email" class="form-control input-lg" placeholder="name@email.com" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label class="label">Password</label>
            <input asp-for="Input.Password" class="form-control input-lg" placeholder="Create a password" autocomplete="new-password" />
            <div class="hint mt-1">8+ chars · a number · a symbol</div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="label">Confirm password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control input-lg" placeholder="Repeat password" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-primary btn-wide lift">Create an account</button>

        <div class="divider"><span>or</span></div>

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-outline-secondary lift">Continue with Apple</button>
            <button type="button" class="btn btn-outline-secondary lift">Continue with Facebook</button>
            <button type="button" class="btn btn-outline-secondary lift">Continue with Google</button>
        </div>

        <p class="terms">By using Classroom, you agree to the Terms and Privacy Policy.</p>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
