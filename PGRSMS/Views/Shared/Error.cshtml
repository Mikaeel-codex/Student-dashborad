@model Pgrsms.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container my-5">
    <h1 class="text-danger">Oops! Something went wrong.</h1>
    <p class="text-muted">An error occurred while processing your request.</p>
    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
    <p><a asp-controller="Home" asp-action="Index">Back to Home</a></p>
</div>
