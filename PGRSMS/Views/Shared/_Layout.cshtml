<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classroom</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="bg-blob blob-1"></div>
    <div class="bg-blob blob-2"></div>

    <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top shadow-sm-sm">
        <div class="container">
            <a class="navbar-brand fw-800 brand animate-in" asp-controller="Home" asp-action="Index">Classroom</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="nav" class="collapse navbar-collapse">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Student" asp-action="Index">Student</a>
                </li>

                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><partial name="_LoginPartial" /></li>
                </ul>
            </div>
        </div>
    </header>

    <main class="page-wrap">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="py-4 bg-transparent">
        <div class="container text-center text-muted small">
            © @DateTime.UtcNow.Year Classroom
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Staggered reveal on load
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.animate-in').forEach((el, i) => {
                el.style.animationDelay = (0.05 * i) + 's';
                el.classList.add('is-visible');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
